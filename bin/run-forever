#!/bin/bash

if [ -z "$@" ]
then
    echo "Run a keeper, restarting it every time it fails."
    echo ""
    echo "Usage: $0 <keeper-script> [keeper-script-parameters]"
    echo "  e.g. $0 bin/keeper-sai-bite --eth-from 0x0000...000"

    exit 1
fi

# Ignore SIGINT and SIGTERM received by the script itself
exit_script() {
    :
}
trap exit_script SIGINT SIGTERM

DELAY=5
while true; do
    $@
    EXIT_CODE=$?

    if [[ "${EXIT_CODE}" -eq 0 || "${EXIT_CODE}" -eq 137 ]]
    then
        exit 0
    fi

    echo "\n\nProcess terminated with an error (exit code ${EXIT_CODE}).\nRespawning it in ${DELAY} seconds...\n\n" >&2
    sleep ${DELAY}
done
